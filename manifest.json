{
  "manifest_version": 3,
  "name": "Bing Search Timer & Helper",
  "version": "1.3",
  "description": "Displays a configurable, movable timer on Bing search results...",
  "author": "Tinaut1986 (Adapted by AI)",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.bing.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bing.com/search*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "data/searchTemplates.json",
        "data/systems.json",
        "data/developers.json",
        "data/sagas.json",
        "data/genres.json",
        "data/parts.json",
        "data/numbers.json",
        "data/aesthetics.json"
      ],
      "use_dynamic_url": false,
      "matches": [
        "*://*.bing.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "bing-timer-helper@tinaut1986.example.com"
    }
  }
}